<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= portfolio.info.name %> - Projetos</title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    .project {
      margin-bottom: 2.5rem;
      padding-bottom: 1.5rem;
      border-bottom: 1px solid #333;
    }
    .project img {
      margin-top: 1rem;
      margin-bottom: 0.5rem;
      display: block;
      max-width: 80%;
      height: 50%;
      border-radius: 8px;
      box-shadow: 0 2px 12px rgba(0,0,0,0.15);
    }
    .project-link {
      color: #00fff7;
      font-weight: bold;
      text-decoration: underline;
      margin-left: 0.3rem;
      margin-top: 0.7rem;
      text-align: center;
    }
    .project-link:hover {
      color: #b97aff;
    }
  </style>
</head>
<body>
  <%- include('partials/header') %>
  <main>
    <section id="projects" class="section">
      <h1>Projetos</h1>
      <% portfolio.projects.forEach(function(project) { %>
        <div class="project">
          <h2><%= project.nome %></h2>
          <p><strong>Descrição:</strong> <%= project.descricao %></p>
          <p><strong>Tecnologias:</strong> <%= project.tecnologias %></p>
          <p><strong>Desafio:</strong> <%= project.desafio %></p>
          <p><strong>Solução:</strong> <%= project.solucao %></p>
          <img src="<%= project.imagem %>" alt="Screenshot do projeto <%= project.nome %>" />
          <div style="text-align: center; margin-top: 0.7rem;">
            <a class="project-link" href="<%= project.repositorio %>" target="_blank">Repositório</a>
          </div>
        </div>
      <% }); %>
    </section>
  </main>
  <%- include('partials/footer') %>
</body>
</html>