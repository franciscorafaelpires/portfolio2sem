<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= portfolio.info.name %> - Habilidades</title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    #skills ul {
      padding-left: 1.5rem;
      line-height: 1.8;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 0.5rem 2rem;
    }
    #skills li {
      margin-bottom: 0.5rem;
    }
    @media (max-width: 768px) {
      #skills ul {
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 0.5rem 1rem;
      }
    }
    @media (max-width: 600px) {
      #skills ul {
        display: block;
        padding-left: 1rem;
      }
      #skills li {
        font-size: 0.9rem;
      }
    }
  </style>
</head>
<body>
  <%- include('partials/header') %>
  <main>
    <section id="skills" class="section">
      <h1>Habilidades</h1>
      <h2>Competências Técnicas</h2>
      <ul>
        <% portfolio.skills.filter(skill => skill.type === 'technical').forEach(function(skill) { %>
          <li><%= skill.name %></li>
        <% }); %>
      </ul>
      <h2>Soft Skills</h2>
      <ul>
        <% portfolio.skills.filter(skill => skill.type === 'soft').forEach(function(skill) { %>
          <li><%= skill.name %></li>
        <% }); %>
      </ul>
    </section>
  </main>
  <%- include('partials/footer') %>
</body>
</html>